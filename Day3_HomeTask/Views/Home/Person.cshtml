@model Day3_HomeTask.Models.Person

@{
    Layout = "Layout.cshtml";
}

<div style="padding: 50px" class="content @(Model.IsDarkSided ? "darkSide" : "lightSide")">
    @Html.Partial("Header", @Model)
    <h4>User @Model.Login is on the <b>@(Model.IsDarkSided ? "dark" : "light")</b> side</h4>
</div>

@Html.Action("ChangeSide", "Home")

@section Navbar{
<div id="navbar" class="navbar @(Model.IsDarkSided ? "navbar-inverse": "navbar-default") navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Day3", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav"></ul>
        </div>
    </div>
</div>
}